Vagrant.configure("2") do |config|
	config.vm.box = "debian/bookworm64"

  config.vm.provider "virtualbox" do |v|
      v.memory = 2048
      v.cpus = 2
  end

	# Server
	config.vm.define "pbureeraS" do |server|
		server.vm.hostname = "pbureeraS"
		server.vm.network "private_network", ip: "192.168.56.110"

    server.vm.provision "shell",
      path: "scripts/setupServer.sh",
      env: {"SERVER_IP" => "192.168.56.110"}
  end

	# ServerWorker
	config.vm.define "pbureeraSW" do |serverworker|
		serverworker.vm.hostname = "pbureeraSW"
		serverworker.vm.network "private_network", ip: "192.168.56.111"

    serverworker.vm.provision "shell",
      path: "scripts/setupWorker.sh",
      env: {"SERVER_IP" => "192.168.56.110"}

  end
end